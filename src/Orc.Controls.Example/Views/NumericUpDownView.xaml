            <Run FontSize="10" Text="(Min:"/>
            <Run FontSize="10" Text="{Binding Source={x:Static sys:Single.MinValue}, Mode=OneWay}"/>
            <Run FontSize="10" Text=";"/>
            <Run FontSize="10" Text="Max:"/>
            <Run FontSize="10" Text="{Binding Source={x:Static sys:Single.MaxValue}, Mode=OneWay}"/>
