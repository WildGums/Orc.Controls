            <Run FontSize="10" Text="(Min:"/>
            <Run FontSize="10" Text="{Binding Source={x:Static sys:Int32.MinValue}, Mode=OneWay}"/>
            <Run FontSize="10" Text=";"/>
            <Run FontSize="10" Text="Max:"/>
            <Run FontSize="10" Text="{Binding Source={x:Static sys:Int32.MaxValue}, Mode=OneWay}"/>
            <Run FontSize="10" Text=")"/>
        </TextBlock>
        <orccontrols:NumericUpDown Style="{StaticResource DefaultNumericUpDownStyle}"
