        <SolidColorBrush x:Key="Orc.Brushes.GrayBrush8" Color="{StaticResource Gray8}" />
        <SolidColorBrush x:Key="Orc.Brushes.GrayBrush9" Color="{StaticResource Gray9}" />
        <SolidColorBrush x:Key="Orc.Brushes.GrayBrush10" Color="{StaticResource Gray10}" />
        
        <SolidColorBrush x:Key="Orc.Brushes.BackgroundBrush" Color="{StaticResource BackgroundColor}" />
        <SolidColorBrush x:Key="Orc.Brushes.ForegroundBrush" Color="{StaticResource ForegroundColor}" />
        <SolidColorBrush x:Key="Orc.Brushes.TransparentWhiteBrush" Color="{StaticResource TransparentWhiteColor}" />
        <SolidColorBrush x:Key="Orc.Brushes.HighTransparentWhiteBrush" Color="{StaticResource Orc.Colors.HighTransparentWhiteColor}" />

        <!-- Foreground -->
        <SolidColorBrush x:Key="Orc.Brushes.IdealForegroundColorBrush" Color="{StaticResource Orc.Colors.IdealForegroundColor}" />
        <SolidColorBrush x:Key="Orc.Brushes.IdealForegroundDisabledBrush" Color="{StaticResource Orc.Colors.IdealForegroundColor}" Opacity="0.56" />
        <SolidColorBrush x:Key="Orc.Brushes.DarkIdealForegroundDisabledBrush" Color="{StaticResource Orc.Colors.DarkIdealForegroundDisabledColor}" />
        <SolidColorBrush x:Key="Orc.Brushes.Text" Color="{StaticResource Orc.Colors.Text}" />
        <SolidColorBrush x:Key="Orc.Brushes.Text.Disabled" Color="{StaticResource Orc.Colors.Text}" Opacity="0.56" />

        <!-- Generic control brushes -->
        <SolidColorBrush x:Key="Orc.Brushes.Control.Border" Color="{StaticResource Orc.Colors.Control.Border}" />
        <SolidColorBrush x:Key="Orc.Brushes.Control.Background" Color="{StaticResource Orc.Colors.Background}" />
