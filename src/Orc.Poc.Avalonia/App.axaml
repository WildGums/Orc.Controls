        <SolidColorBrush x:Key="Orc.Brushes.AccentColor80" Color="{StaticResource Orc.Colors.AccentColor80}" />
        <SolidColorBrush x:Key="Orc.Brushes.AccentColor60" Color="{StaticResource Orc.Colors.AccentColor60}" />
