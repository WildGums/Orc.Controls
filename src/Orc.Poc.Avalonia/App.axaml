    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme Mode="Light"/>
        
        <StyleInclude Source="/Styles/Styles.axaml"/>
        <StyleInclude Source="/Controls/TControl/MyTControl.axaml"/>
    </Application.Styles>
</Application>
