        <SolidColorBrush x:Key="Orc.Brushes.WhiteBrush" Color="{StaticResource WhiteColor}" />
        <SolidColorBrush x:Key="Orc.Brushes.WhiteBrush20" Color="{StaticResource WhiteColor20}" />
        <SolidColorBrush x:Key="Orc.Brushes.Black" Color="{StaticResource BlackColor}" />
        <SolidColorBrush x:Key="Orc.Brushes.Black20" Color="{StaticResource BlackColor20}" />
