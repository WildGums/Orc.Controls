<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Orc.Poc.Avalonia"
             x:Class="Orc.Poc.Avalonia.App">
   
    <Application.Resources>
        <!-- METADATA -->
        <!-- <system:String x:Key="Theme.Name">Light</system:String> -->
        <!-- <system:String x:Key="Theme.Origin">Orc.Theming.Showcase</system:String> -->
        <!-- <system:String x:Key="Theme.DisplayName">{{ThemeDisplayName}}</system:String> -->
        <!-- <system:String x:Key="Theme.BaseColorScheme">{{BaseColorScheme}}</system:String> -->
        <!-- <system:String x:Key="Theme.ColorScheme">{{ColorScheme}}</system:String> -->
        <!-- <Color x:Key="Theme.PrimaryAccentColor">{{Orc.Colors.AccentBaseColor}}</Color> -->
        <Color x:Key="Theme.ShowcaseColor">Coral</Color>
        <!-- <system:Boolean x:Key="Theme.IsHighContrast">{{IsHighContrast}}</system:Boolean> -->

        <!-- Metadata brush  -->
        <SolidColorBrush x:Key="Theme.ShowcaseBrush" Color="{StaticResource Theme.ShowcaseColor}"/>

        <!-- COLORS -->

        <!-- Accent colors -->
        <Color x:Key="Orc.Colors.AccentBaseColor">Coral</Color>
        <Color x:Key="Orc.Colors.AccentColor">Coral</Color>
        <!--80%-->
        <Color x:Key="Orc.Colors.AccentColor80">#CCFF7F50</Color>
        <!--60%-->
        <Color x:Key="Orc.Colors.AccentColor60">#99FF7F50</Color>
        <!--40%-->
        <Color x:Key="Orc.Colors.AccentColor40">#66FF7F50</Color>
        <!--20%-->
        <Color x:Key="Orc.Colors.AccentColor20">#33FF7F50</Color>

        <Color x:Key="Orc.Colors.HighlightColor">#99FF7F50</Color>
        
        <!-- Backwards compatible theming for Orchestra / Orc.Controls -->
        <Color x:Key="AccentBaseColor">Coral</Color>
        <Color x:Key="AccentColor">Coral</Color>
        <!--80%-->
        <Color x:Key="AccentColor1">#CCFF7F50</Color>
        <!--60%-->
        <Color x:Key="AccentColor2">#99FF7F50</Color>
        <!--40%-->
        <Color x:Key="AccentColor3">#66FF7F50</Color>
        <!--20%-->
        <Color x:Key="AccentColor4">#33FF7F50</Color>
        <Color x:Key="AccentColor5">#33FF7F50</Color>
        
        <!-- Base colors -->
        <Color x:Key="BlackColor">Black</Color>
        <Color x:Key="BlackColor20">#51000000</Color>
        <Color x:Key="WhiteColor">#FFFFFFFF</Color>
        <Color x:Key="WhiteColor20">#51FFFFFF</Color>
        <Color x:Key="Gray1">#FF333333</Color>
        <Color x:Key="Gray2">#FF7F7F7F</Color>
        <Color x:Key="Gray3">#FF9D9D9D</Color>
        <Color x:Key="Gray4">#FFABABAB</Color>
        <Color x:Key="Gray5">#FFB9B9B9</Color>
        <Color x:Key="Gray6">#FFCCCCCC</Color>
        <Color x:Key="Gray7">#FFD8D8D9</Color>
        <Color x:Key="Gray8">#FFE0E0E0</Color>
        <Color x:Key="Gray9">#FFEFEFEF</Color>
        <Color x:Key="Gray10">#FFF7F7F7</Color>
        <Color x:Key="BackgroundColor">#FFFFFFFF</Color>
        <Color x:Key="ForegroundColor">#FF000000</Color>
        <Color x:Key="Orc.Colors.Background">#FFFFFFFF</Color>
        <Color x:Key="Orc.Colors.Foreground">#FF000000</Color>
        <Color x:Key="Orc.Colors.Text">#FF000000</Color>

        <Color x:Key="TransparentWhiteColor">#00FFFFFF</Color>
        <Color x:Key="Orc.Colors.HighTransparentWhiteColor">#17FFFFFF</Color>

        <!-- Foreground -->
        <Color x:Key="Orc.Colors.IdealForegroundColor">White</Color>
        <Color x:Key="Orc.Colors.DarkIdealForegroundDisabledColor">#ADADAD</Color>

        <!-- Misc colors -->
        <Color x:Key="Orc.Colors.ExtremeHighlightColor">#FFFFD232</Color>
        <Color x:Key="Orc.Colors.DarkExtremeHighlightColor">#FFF29536</Color>

        <!-- Generic control colors -->
        <Color x:Key="Orc.Colors.Control.Border">#FFCCCCCC</Color>
        <Color x:Key="Orc.Colors.Control.Disabled.Border">#FFB9B9B9</Color>
        
        <SolidColorBrush x:Key="Orc.Brushes.AccentBaseColorBrush" Color="{StaticResource Orc.Colors.AccentBaseColor}" />
        <SolidColorBrush x:Key="Orc.Brushes.AccentColorBrush" Color="{StaticResource Orc.Colors.AccentBaseColor}" />
