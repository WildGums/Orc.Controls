        <SolidColorBrush x:Key="AccentColorBrush5" Color="{StaticResource Orc.Colors.AccentColor20}" />

        <SolidColorBrush x:Key="Orc.Brushes.HighlightBrush" Color="{StaticResource Orc.Colors.HighlightColor}" />

        <!-- Misc brushes -->
        <SolidColorBrush x:Key="Orc.Brushes.ExtremeHighlightBrush" Color="{StaticResource Orc.Colors.ExtremeHighlightColor}" />
        <SolidColorBrush x:Key="Orc.Brushes.DarkExtremeHighlightBrush" Color="{StaticResource Orc.Colors.DarkExtremeHighlightColor}" />

        <!-- Base brushes -->   
        <SolidColorBrush x:Key="White" Color="{StaticResource WhiteColor}" />
        <SolidColorBrush x:Key="White20" Color="{StaticResource WhiteColor20}" />
        <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource WhiteColor}" />
        <SolidColorBrush x:Key="WhiteBrush20" Color="{StaticResource WhiteColor20}" />
        <SolidColorBrush x:Key="Black" Color="{StaticResource BlackColor}" />
        <SolidColorBrush x:Key="Black20" Color="{StaticResource BlackColor20}" />
